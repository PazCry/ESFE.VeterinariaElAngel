<Window x:Class="InterfazDeUsuarioUI.VentanaMascota"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaMascota" Height="778" Width="800">
    <Window.Resources>
        <!-- Estilos para botones con gradientes exactos -->
        <Style x:Key="GradientButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15" 
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox con fondo rosa EXACTO -->
        <Style x:Key="PinkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="#FFB5C5" CornerRadius="10" BorderThickness="0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                    VerticalAlignment="Center" 
                                    Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ComboBox con el mismo rosa -->
        <Style x:Key="PinkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="#FFB5C5" CornerRadius="10" BorderThickness="0">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                        Grid.Column="2" 
                                        Focusable="false" 
                                        ClickMode="Press" 
                                        IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="Transparent" 
                                        BorderThickness="0"/>
                                <ContentPresenter x:Name="ContentSite" 
                                            IsHitTestVisible="False" 
                                            Content="{TemplateBinding SelectionBoxItem}" 
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                            Margin="10,3,23,3" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox" 
                                    Style="{x:Null}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center" 
                                    Margin="3,3,23,3" 
                                    Focusable="True" 
                                    Background="Transparent" 
                                    Visibility="Hidden" 
                                    IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                <Popup x:Name="Popup" 
                                  Placement="Bottom" 
                                  IsOpen="{TemplateBinding IsDropDownOpen}" 
                                  AllowsTransparency="True" 
                                  Focusable="False" 
                                  PopupAnimation="Slide">
                                    <Grid x:Name="DropDown" 
                                      SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" 
                                           Background="White" 
                                           BorderThickness="1" 
                                           BorderBrush="#CCCCCC" 
                                           CornerRadius="5"/>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradientes exactos del diseño original -->
        <LinearGradientBrush x:Key="PinkHeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9BB5" Offset="0"/>
            <GradientStop Color="#FFC1D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- Botones con colores exactos -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7ED321" Offset="0"/>
            <GradientStop Color="#9AE134" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#50C8F0" Offset="0"/>
            <GradientStop Color="#6BD5F3" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F5A623" Offset="0"/>
            <GradientStop Color="#F8B946" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9BB5" Offset="0"/>
            <GradientStop Color="#FFC1D4" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7B1FA2" Offset="0"/>
            <GradientStop Color="#9C27B0" Offset="1"/>
        </LinearGradientBrush>

        <!-- Gradiente para barra de búsqueda -->
        <LinearGradientBrush x:Key="SearchBarGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8EAF6" Offset="0"/>
            <GradientStop Color="#F3E5F5" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="10" >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con icono de mascota -->
            <Border Grid.Row="0" Background="{StaticResource PinkHeaderGradient}" CornerRadius="8,8,0,0" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="🐾" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="GESTIÓN DE MASCOTAS" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Form Section -->
            <Grid Grid.Row="1" Margin="25,25,25,27">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Title -->
                <TextBlock Grid.Row="0" Text="FORMULARIO DE DATOS" 
                      Foreground="#666" 
                      FontSize="11" 
                      FontWeight="Bold" 
                      Margin="0,0,0,15"/>

                <!-- Form Fields -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                        <TextBlock Text="Num Mascota:" Foreground="#666" FontSize="11" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtId" Style="{StaticResource PinkTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                        <TextBlock Text="Nombre:" Foreground="#666" FontSize="11" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtNombre" Style="{StaticResource PinkTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Segunda fila -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                        <TextBlock Text="Especie:" 
                        Foreground="#666" 
           FontSize="11" 
           Margin="0,0,0,3"/>

                        <ComboBox x:Name="cbxEspecie"
          Style="{StaticResource PinkComboBoxStyle}">
                            <ComboBoxItem Content="Perro" Foreground="Black"/>
                            <ComboBoxItem Content="Gato" Foreground="Black"/>
                            <ComboBoxItem Content="Ave" Foreground="Black"/>
                            <ComboBoxItem Content="Reptil" Foreground="Black"/>
                            <ComboBoxItem Content="Pez" Foreground="Black"/>
                            <ComboBoxItem Content="Otro" Foreground="Black"/>
                        </ComboBox>
                    </StackPanel>


                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBlock Text="Raza:" Foreground="#666" FontSize="11" Margin="0,0,0,3"/>
                        <ComboBox x:Name="cbxRaza" Style="{StaticResource PinkComboBoxStyle}">
                            <ComboBoxItem Content="Labrador" Foreground="Black"/>
                            <ComboBoxItem Content="Golden Retriever" Foreground="Black"/>
                            <ComboBoxItem Content="Pastor Alemán" Foreground="Black"/>
                            <ComboBoxItem Content="Bulldog Francés" Foreground="Black"/>
                            <ComboBoxItem Content="Chihuahua" Foreground="Black"/>
                            <ComboBoxItem Content="Poodle" Foreground="Black"/>
                            <ComboBoxItem Content="Mestizo" Foreground="Black"/>
                            <ComboBoxItem Content="Otra" Foreground="Black"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                        <TextBlock Text="Color:" Foreground="#666" FontSize="11" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtColor" Style="{StaticResource PinkTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Cuarta fila -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,18,0,61" Grid.RowSpan="2">
                        <TextBlock Text="Fecha Nacimiento:" Foreground="#666" FontSize="11" Margin="0,0,0,3"/>
                        <DatePicker x:Name="dtpFechaNacimiento" Margin="5" Padding="10,8" BorderThickness="0" FontSize="12">
                            <DatePicker.Template>
                                <ControlTemplate TargetType="DatePicker">
                                    <Border Background="#FFB5C5" CornerRadius="10" BorderThickness="0">
                                        <Grid>
                                            <Button x:Name="PART_Button" 
                                               HorizontalAlignment="Stretch" 
                                               VerticalAlignment="Stretch" 
                                               Background="Transparent" 
                                               BorderThickness="0"/>
                                            <DatePickerTextBox x:Name="PART_TextBox" 
                                                         Foreground="White" 
                                                         Background="Transparent" 
                                                         BorderThickness="0" 
                                                         Margin="10,0"/>
                                            <Popup x:Name="PART_Popup"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </DatePicker.Template>
                        </DatePicker>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
                        <TextBlock Text="Género:" Foreground="#666" FontSize="11" Margin="0,0,0,3"/>
                        <ComboBox x:Name="cbxGenero" Style="{StaticResource PinkComboBoxStyle}">
                            <ComboBoxItem Content="Macho" Foreground="Black"/>
                            <ComboBoxItem Content="Hembra" Foreground="Black"/>
                        </ComboBox>
                    </StackPanel>



                </Grid>

                <!-- Action Buttons con colores exactos -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0"/>
                <Button x:Name="btnGuardar" Content="✓ Guardar" 
                       Background="{StaticResource GreenGradient}" 
                       Style="{StaticResource GradientButtonStyle}" Margin="46,50,568,-68" Grid.Row="2"/>
                <Button x:Name="btnBuscar" Content="🔍 Buscar" 
                       Background="{StaticResource BlueGradient}" 
                       Style="{StaticResource GradientButtonStyle}" Margin="213,50,394,-68" Grid.Row="2" Click="Button_Click"/>
                <Button x:Name="btnModificar" Content="✏ Modificar" 
                       Background="{StaticResource OrangeGradient}" 
                       Style="{StaticResource GradientButtonStyle}" Margin="390,0,212,-68" Grid.Row="2" Height="38" VerticalAlignment="Bottom"/>
            </Grid>

            <!-- Search Bar con gradiente original -->
            <Border Grid.Row="2" Background="{StaticResource SearchBarGradient}" CornerRadius="8" Margin="20,72,10,10" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                        x:Name="SearchTextBox"
                        Background="White" 
                        BorderThickness="0" 
                        Padding="15,10" 
                        FontSize="12"
                        VerticalAlignment="Center"
                        Text="BARRA DE BÚSQUEDA">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="20" 
                                   BorderThickness="0">
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                            VerticalAlignment="Center" 
                                            Margin="15,0"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <Button Grid.Column="1" 
                       Content="🔍" 
                       Background="{StaticResource PurpleGradient}" 
                       Foreground="White"
                       BorderThickness="0" 
                       Padding="15,10" 
                       Margin="10,0,0,0"
                       Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="20" 
                                   BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Records Section Header -->
            <Border Grid.Row="3" Background="{StaticResource PurpleGradient}" Margin="20,0,20,10" CornerRadius="5" Padding="15">
                <TextBlock Text="REGISTROS DE MASCOTAS" 
                      Foreground="White" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      FontSize="14"/>
            </Border>

            <!-- Data Grid -->
            <Border Grid.Row="4" Background="White" CornerRadius="5" Margin="20,0,20,20">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <DataGrid x:Name="MascotasDataGrid" 
                     AutoGenerateColumns="False" 
                     HeadersVisibility="Column"
                     GridLinesVisibility="Horizontal"
                     RowHeaderWidth="0"
                     Background="White"
                     BorderThickness="0"
                     FontSize="12"
                     RowHeight="35">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Foreground" Value="#666"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#DDD"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Num Mascota" Binding="{Binding NumMascota}" Width="100"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="120"/>
                        <DataGridTextColumn Header="Especie" Binding="{Binding Especie}" Width="80"/>
                        <DataGridTextColumn Header="Raza" Binding="{Binding Raza}" Width="100"/>
                        <DataGridTextColumn Header="Propietario" Binding="{Binding Propietario}" Width="120"/>
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="100"/>
                        <DataGridTextColumn Header="Fecha Nacimiento" Binding="{Binding FechaNacimiento}" Width="120"/>
                        <DataGridTextColumn Header="Género" Binding="{Binding Genero}" Width="70"/>
                        <DataGridTextColumn Header="Peso" Binding="{Binding Peso}" Width="60"/>
                        <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <Button x:Name="btnEliminar" Content="🗑 Eliminar" 
                       Background="{StaticResource RedGradient}" 
                       Style="{StaticResource GradientButtonStyle}" Margin="572,0,73,108" Grid.Row="2"/>
        </Grid>
    </Border>

</Window>
