<Window x:Class="InterfazDeUsuarioUI.VentanaMascota"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaMascota" Height="778" Width="800">
    <Window.Resources>
        <!-- Estilos para botones con gradientes exactos -->
        <Style x:Key="GradientButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15" 
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox con fondo rosa EXACTO -->
        <Style x:Key="PinkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="#FFB5C5" CornerRadius="10" BorderThickness="0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                    VerticalAlignment="Center" 
                                    Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ComboBox con el mismo rosa -->
        <Style x:Key="PinkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="#FFB5C5" CornerRadius="10" BorderThickness="0">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                        Grid.Column="2" 
                                        Focusable="false" 
                                        ClickMode="Press" 
                                        IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="Transparent" 
                                        BorderThickness="0"/>
                                <ContentPresenter x:Name="ContentSite" 
                                            IsHitTestVisible="False" 
                                            Content="{TemplateBinding SelectionBoxItem}" 
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                            Margin="10,3,23,3" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox" 
                                    Style="{x:Null}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center" 
                                    Margin="3,3,23,3" 
                                    Focusable="True" 
                                    Background="Transparent" 
                                    Visibility="Hidden" 
                                    IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                <Popup x:Name="Popup" 
                                  Placement="Bottom" 
                                  IsOpen="{TemplateBinding IsDropDownOpen}" 
                                  AllowsTransparency="True" 
                                  Focusable="False" 
                                  PopupAnimation="Slide">
                                    <Grid x:Name="DropDown" 
                                      SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" 
                                           Background="White" 
                                           BorderThickness="1" 
                                           BorderBrush="#CCCCCC" 
                                           CornerRadius="5"/>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradientes exactos del diseño original -->
        <LinearGradientBrush x:Key="PinkHeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9BB5" Offset="0"/>
            <GradientStop Color="#FFC1D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- Botones con colores exactos -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7ED321" Offset="0"/>
            <GradientStop Color="#9AE134" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#50C8F0" Offset="0"/>
            <GradientStop Color="#6BD5F3" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F5A623" Offset="0"/>
            <GradientStop Color="#F8B946" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9BB5" Offset="0"/>
            <GradientStop Color="#FFC1D4" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7B1FA2" Offset="0"/>
            <GradientStop Color="#9C27B0" Offset="1"/>
        </LinearGradientBrush>

        <!-- Gradiente para barra de búsqueda -->
        <LinearGradientBrush x:Key="SearchBarGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8EAF6" Offset="0"/>
            <GradientStop Color="#F3E5F5" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="10" >

        <Grid Margin="8,-5,-8,-98">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="374.45"/>
            </Grid.RowDefinitions>

            <!-- Header con icono de mascota -->
            <Border Grid.Row="0" Background="#F8BBD9" CornerRadius="8,8,0,0" Padding="20" Margin="-18,0,0,0" Grid.RowSpan="2" Height="67" VerticalAlignment="Top" HorizontalAlignment="Left" Width="798">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="🐾" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="GESTIÓN DE MASCOTAS" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Form Section -->
            <Grid Grid.Row="1" Margin="25,80,25,120" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="227"/>
                </Grid.RowDefinitions>

                <!-- Form Title -->

                <!-- Form Fields -->
                <Grid Grid.Row="1" HorizontalAlignment="Left" Width="730" Height="207" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="207.63"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila -->

                    <StackPanel Grid.Row="0" Margin="370,5,5,152"/>

                    <!-- Segunda fila -->
                    <StackPanel Grid.Column="0" Margin="5,57,370,81"/>


                    <StackPanel Margin="370,57,5,81"/>
                    <StackPanel Margin="370,137,5,15"/>

                    <!-- Cuarta fila -->
                    <StackPanel Grid.Column="0" Margin="10,150,365,58"/>

                    <StackPanel Margin="370,203,5,5"/>
                    <TextBlock Text="Nombre:" Foreground="#666" FontSize="11" Margin="4,0,371,184"/>
                    <TextBox x:Name="txtNombre" Style="{StaticResource PinkTextBoxStyle}" Margin="10,20,0,0" HorizontalAlignment="Left" Width="345" Height="43" VerticalAlignment="Top" Foreground="Black"/>
                    <TextBlock Text="Color:" Foreground="#666" FontSize="11" Margin="393,80,-18,97"/>
                    <TextBlock Text="Género:" Foreground="#666" FontSize="11" HorizontalAlignment="Left" Width="86" Margin="393,162,0,0" Height="20" VerticalAlignment="Top"/>
                    <TextBlock Text="Fecha Nacimiento:" Foreground="#666" FontSize="11" Margin="18,144,357,49"/>
                    <DatePicker x:Name="dtpFechaNacimiento" HorizontalAlignment="Left" Margin="12,174,0,0" VerticalAlignment="Top" Width="327"/>
                    <TextBox x:Name="txtColor" HorizontalAlignment="Left" Height="49" Margin="390,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314" Background="#FFFFB5C5"/>
                </Grid>

                <!-- Action Buttons con colores exactos -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,227,0,0"/>
                <TextBlock Text="Raza:"  Foreground="#666" FontSize="11" Margin="385,0,-11,213" Grid.Row="1"/>
                <TextBox x:Name="txtGenero" TextWrapping="Wrap" Margin="385,184,0,0" Grid.Row="1" Background="#FFFFB5C5" Height="43" VerticalAlignment="Top" HorizontalAlignment="Left" Width="317"/>
            </Grid>

            <!-- Search Bar con gradiente original -->
            <Border Grid.Row="2" Background="{StaticResource SearchBarGradient}" CornerRadius="8" Margin="20,72,10,10" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                        x:Name="txtBuscar"
                        Background="White" 
                        BorderThickness="0" 
                        Padding="15,10" 
                        FontSize="12"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Width="671">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="20" 
                                   BorderThickness="0">
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                            VerticalAlignment="Center" 
                                            Margin="15,0"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <Button 
                       Content="🔍" 
                       Background="#C084FC" 
                       Foreground="White"
                       BorderThickness="0" 
                       Padding="15,10" 
                       Margin="673,-2,0,2"
                       Cursor="Hand" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="49">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="20" 
                                   BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Records Section Header -->

            <!-- Data Grid -->
            <Button x:Name="btnEliminar" Content="🗑 Eliminar" 
                       Background="#FFFFB3D1" 
                       Style="{StaticResource GradientButtonStyle}" Margin="576,12,0,0"  Height="57" VerticalAlignment="Top" Grid.Row="2" HorizontalAlignment="Left" Width="135" Click="btnEliminar_Click_1"/>
            <Button x:Name="btnGuardar" Content="✓ Guardar" 
                       Background="#FFA8E6CF" 
                       Style="{StaticResource GradientButtonStyle}" Margin="48,16,0,0" Grid.Row="2" Height="56" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116" Click="btnGuardar_Click_1"/>
            <Button x:Name="btnBuscar" Content="🔍 Buscar" 
                       Background="#FFA8C8EC" 
                       Style="{StaticResource GradientButtonStyle}" Margin="228,17,0,0" Grid.Row="2" Click="Button_Click" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="123"/>
            <Button x:Name="btnModificar" Content="✏ Modificar" 
                       Background="#FFFFD3A5" 
                       Style="{StaticResource GradientButtonStyle}" Grid.Row="2" Height="57" Width="128" HorizontalAlignment="Left" Margin="410,12,0,0" VerticalAlignment="Top" Click="btnModificar_Click_1"/>
            <TextBlock Text="Especie:" 
                        Foreground="#666" 
           FontSize="11" 
           Margin="40,145,385,163" Grid.Row="1" 
           />
            <TextBox x:Name="txtEspecie" TextWrapping="Wrap" Margin="40,180,0,0" Grid.Row="1" Background="#FFFFB5C5" HorizontalAlignment="Left" Width="303" Height="35" VerticalAlignment="Top"/>
            <TextBox x:Name="txtRaza" TextWrapping="Wrap" Background="#FFFFB5C5" Margin="417,108,0,0" Grid.Row="1" HorizontalAlignment="Left" Width="309" Height="44" VerticalAlignment="Top"/>
            <DataGrid x:Name="dgvListarMascota" Margin="40,67,0,0" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}" Height="175" VerticalAlignment="Top" HorizontalAlignment="Left" Width="686" SelectionChanged="dgvListarMascota_SelectionChanged"/>
            
        </Grid>
    </Border>

</Window>
