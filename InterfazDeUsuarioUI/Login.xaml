<Window x:Class="InterfazDeUsuarioUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Window.Resources>
        <!-- Gradiente de fondo rosado pastel -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE4E1" Offset="0"/>
            <GradientStop Color="#FFC0CB" Offset="0.5"/>
            <GradientStop Color="#FFB6C1" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo para los TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFEEF2F5"/>
            <Setter Property="BorderBrush" Value="#FFDDA0DD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FFDA70D6"/>
                    <Setter Property="Background" Value="#FFFAF0E6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FFEEF2F5"/>
            <Setter Property="BorderBrush" Value="#FFDDA0DD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FFDA70D6"/>
                    <Setter Property="Background" Value="#FFFAF0E6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para el botón -->
        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Background" Value="#FFDA70D6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBA55D3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF9370DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón de cerrar -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDA70D6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20DA70D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo con gradiente rosado pastel -->
        <Rectangle Fill="#F3E8FF"/>

        <!-- Panel principal de login -->
        <Border Background="White"
                CornerRadius="5"
                Effect="{x:Null}" Height="414" VerticalAlignment="Center" BorderBrush="Orchid" BorderThickness="5,5,5,5" HorizontalAlignment="Center" Width="444">

            <Grid Margin="40,40,40,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título principal -->
                <TextBlock Grid.Row="0"
                          Text="BIENVENIDOS"
                          FontSize="28"
                          FontWeight="Bold"
                          FontFamily="Segoe UI"
                          Foreground="#FFDA70D6"
                          HorizontalAlignment="Center"/>

                <!-- Subtítulo -->
                <TextBlock Grid.Row="2"
                          Text="Ingresa tus credenciales"
                          FontSize="14"
                          FontFamily="Segoe UI"
                          Foreground="#FF999999"
                          HorizontalAlignment="Center"/>

                <!-- Etiqueta Usuario -->
                <TextBlock Grid.Row="5"
                          Text="Correo:"
                          FontSize="12"
                          FontWeight="SemiBold"
                          FontFamily="Segoe UI"
                          Foreground="#FF666666" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Width="354"/>

                <!-- Campo de texto Usuario -->



                <!-- Etiqueta Contraseña -->
                <TextBlock Grid.Row="11"
                          Text="Contraseña:"
                          FontSize="12"
                          FontWeight="SemiBold"
                          FontFamily="Segoe UI"
                          Foreground="#FF666666"
                          Margin="0,16,0,0" HorizontalAlignment="Center" Width="354" Height="16" VerticalAlignment="Top"/>

                <!-- Campo de contraseña -->
                <PasswordBox x:Name="txtPassword"
             Grid.Row="11"
             Height="57"
             VerticalAlignment="Top"
             Style="{StaticResource ModernPasswordBox}" HorizontalAlignment="Center" Width="354" Margin="0,46,0,0" CaretBrush="Black" BorderBrush="Black" SelectionTextBrush="Black" OpacityMask="Black">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Grid>
                                <!-- Caja de password real -->
                                <ScrollViewer x:Name="PART_ContentHost"/>

                                <!-- Watermark -->
                                <TextBlock Text="Contraseña"
                           Foreground="Gray"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <!-- Si Password está vacío, mostrar watermark -->
                                                <Trigger Property="Tag" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>


                <!-- Botón de inicio de sesión -->
                <Button x:Name="btnIngresar"
                       Content="INICIAR SESIÓN"
                       Style="{StaticResource LoginButton}"
                       Margin="46,123,46,0" Grid.Row="11" Height="54" VerticalAlignment="Top"
                       Click="btnIngresar_Click"/>
            </Grid>
        </Border>

        <!-- Botón cerrar (X) -->
        <Button Content="✕"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="30"
                Height="30"
                Margin="0,10,10,0"
                Style="{StaticResource CloseButton}"/>
        <TextBox x:Name="txtCorreo"
         Height="56"
         VerticalAlignment="Top"
         BorderBrush="Orchid"
         Background="{x:Null}"
         Style="{StaticResource ModernTextBox}" Margin="225,173,225,0" CaretBrush="Black" SelectionTextBrush="Black" OpacityMask="Black">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <!-- Caja de texto real -->
                        <ScrollViewer x:Name="PART_ContentHost"/>

                        <!-- Texto de Watermark -->
                        <TextBlock Text="Ingrese Correo @"
                           Foreground="Gray"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- Mostrar watermark cuando el texto está vacío -->
                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
    </Grid>
</Window>
