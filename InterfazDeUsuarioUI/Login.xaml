<Window x:Class="InterfazDeUsuarioUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Window.Resources>
        <!-- Gradiente de fondo rosado pastel -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE4E1" Offset="0"/>
            <GradientStop Color="#FFC0CB" Offset="0.5"/>
            <GradientStop Color="#FFB6C1" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo para los TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFEEF2F5"/>
            <Setter Property="BorderBrush" Value="#FFDDA0DD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FFDA70D6"/>
                    <Setter Property="Background" Value="#FFFAF0E6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FFEEF2F5"/>
            <Setter Property="BorderBrush" Value="#FFDDA0DD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FFDA70D6"/>
                    <Setter Property="Background" Value="#FFFAF0E6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para el botón -->
        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Background" Value="#FFDA70D6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBA55D3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF9370DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón de cerrar -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDA70D6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20DA70D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo con gradiente rosado pastel -->
        <Rectangle Fill="{StaticResource BackgroundGradient}"/>

        <!-- Panel principal de login -->
        <Border Background="White"
                CornerRadius="20"
                Margin="126,10,180,0"
                Effect="{x:Null}" Height="567" VerticalAlignment="Top">

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título principal -->
                <TextBlock Grid.Row="0"
                          Text="BIENVENIDOS"
                          FontSize="28"
                          FontWeight="Bold"
                          FontFamily="Segoe UI"
                          Foreground="#FFDA70D6"
                          HorizontalAlignment="Center"/>

                <!-- Subtítulo -->
                <TextBlock Grid.Row="2"
                          Text="Ingresa tus credenciales"
                          FontSize="14"
                          FontFamily="Segoe UI"
                          Foreground="#FF999999"
                          HorizontalAlignment="Center"/>

                <!-- Etiqueta Usuario -->
                <TextBlock Grid.Row="4"
                          Text="Usuario:"
                          FontSize="12"
                          FontWeight="SemiBold"
                          FontFamily="Segoe UI"
                          Foreground="#FF666666"
                          Margin="0,0,0,5"/>

                <!-- Campo de texto Usuario -->
                <TextBox x:Name="txtUsuario"
                        Grid.Row="6"
                        Style="{StaticResource ModernTextBox}" Height="70" VerticalAlignment="Top"/>

                <!-- Etiqueta Contraseña -->
                <TextBlock Grid.Row="8"
                          Text="Contraseña:"
                          FontSize="12"
                          FontWeight="SemiBold"
                          FontFamily="Segoe UI"
                          Foreground="#FF666666"
                          Margin="0,0,0,5"/>

                <!-- Campo de contraseña -->
                <PasswordBox x:Name="txtPassword"
                            Grid.Row="9"
                            Style="{StaticResource ModernPasswordBox}" Margin="0,15,0,165" Grid.RowSpan="3"/>

                <!-- Botón de inicio de sesión -->
                <Button
                       Content="INICIAR SESIÓN"
                       Style="{StaticResource LoginButton}"
                       Margin="196,1,26,15" Grid.RowSpan="2"/>
            </Grid>
        </Border>

        <!-- Botón cerrar (X) -->
        <Button Content="✕"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="30"
                Height="30"
                Margin="0,10,10,0"
                Style="{StaticResource CloseButton}"/>
    </Grid>
</Window>
