<Window x:Class="InterfazDeUsuarioUI.VentanaUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaUsuario" Height="756" Width="800">
    <Window.Resources>
        <!-- Estilos para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" Grid.Column="2" Focusable="false"
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press" Background="Transparent" BorderThickness="0">
                                    <Path x:Name="Arrow" Fill="#666" HorizontalAlignment="Right" Margin="0,0,10,0"
                                          VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                Margin="{TemplateBinding Padding}"
                                                 VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}"
                             
                                        HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"
                                        Focusable="True" Background="Transparent" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                      AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Border CornerRadius="10" Background="White" BorderThickness="1" BorderBrush="#E9ECEF">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para Botones -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#74B9FF"/>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#A29BFE"/>
        </Style>

        <Style x:Key="SaveButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#00B894"/>
        </Style>

        <Style x:Key="ModifyButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FDCB6E"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF7675"/>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F3F4"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style x:Key="DataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,25">
        <!-- Header -->
        <Border Height="65" VerticalAlignment="Top" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F8BBD9" Offset="0"/>
                    <GradientStop Color="#E4A5C7" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="👤" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="GESTIÓN DE USUARIOS" FontSize="24" FontWeight="SemiBold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Margin="0,70,0,41" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Formulario de Datos -->
                <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="25" Height="416" VerticalAlignment="Top" Grid.RowSpan="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
                    </Border.Effect>

                    <Grid HorizontalAlignment="Center" Width="673" Margin="0,4,0,-22">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="485.93125"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="673"/>
                        </Grid.ColumnDefinitions>



                        <!-- Nombre -->
                        <Label Grid.Column="0" Content="Nombre" Style="{StaticResource ModernLabel}" Margin="0,19,550,416"/>

                        <!-- Apellido -->
                        <Label Grid.Column="0" Content="Apellido" Style="{StaticResource ModernLabel}" Margin="0,84,473,368"/>
                        <TextBox x:Name="txtApellido" Style="{StaticResource ModernTextBox}" Margin="96,83,0,0" HorizontalAlignment="Left" Width="356" Height="53" VerticalAlignment="Top"/>

                        <!-- Correo -->
                        <Label Grid.Column="0" Content="Correo" Style="{StaticResource ModernLabel}" Margin="-4,153,477,299"/>
                        <TextBox x:Name="txtCorreo" Style="{StaticResource ModernTextBox}" Margin="98,151,0,0" HorizontalAlignment="Left" Width="354" Height="36" VerticalAlignment="Top"/>

                        <!-- Contraseña -->
                        <Label Grid.Column="0" Content="Contraseña" Style="{StaticResource ModernLabel}" Margin="-4,210,477,237"/>
                        <PasswordBox x:Name="txtContra" Height="43" Margin="106,209,0,0" FontSize="13" 
                                   BorderThickness="2" BorderBrush="#E9ECEF" Background="#F8F9FA" VerticalAlignment="Top" HorizontalAlignment="Left" Width="346">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="12,8"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                                        <Setter Property="Background" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Teléfono -->
                        <Label Grid.Column="0" Content="Teléfono" Style="{StaticResource ModernLabel}" Margin="-2,270,475,160"/>
                        <TextBox x:Name="txtTelefono" Style="{StaticResource ModernTextBox}" Margin="110,269,0,0" Height="48" VerticalAlignment="Top" HorizontalAlignment="Left" Width="342"/>

                        <!-- Nombre del Rol -->
                        <Label Grid.Column="0" Content="Nombre del Rol" Style="{StaticResource ModernLabel}" Margin="-2,335,0,0" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"/>
                        <ComboBox x:Name="cbxIdRol" Style="{StaticResource ModernComboBox}" Margin="115,328,0,0" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="337">
                            <ComboBoxItem Content="Administrador"/>
                            <ComboBoxItem Content="Usuario"/>
                            <ComboBoxItem Content="Veterinario"/>
                            <ComboBoxItem Content="Asistente"/>
                        </ComboBox>

                        <!-- Campo Buscar (lado derecho) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,438"/>

                        <!-- ID (campo pequeño abajo) -->
                        <StackPanel Grid.Column="0" Margin="0,302,473,47">
                            <TextBox x:Name="txtId" Style="{StaticResource ModernTextBox}" Width="80" HorizontalAlignment="Left" IsEnabled="False" Visibility="Collapsed"/>
                        </StackPanel>

                        <Button x:Name="btnBuscar" Content="🔍 Buscar" Style="{StaticResource SearchButton}" Margin="466,15,0,0" HorizontalAlignment="Left" Width="92" Height="40" VerticalAlignment="Top" Click="btnBuscar_Click_1"/>
                        <Button x:Name="btnReiniciar" Content="🔄 Reiniciar" Style="{StaticResource ResetButton}" Margin="568,13,0,0" HorizontalAlignment="Left" Width="96" Height="40" VerticalAlignment="Top" Click="btnReiniciar_Click_1"/>
                        <Button x:Name="btnGuardar" Content="💾 Guardar" Style="{StaticResource SaveButton}" Margin="504,101,0,0" Background="#FFA8E6CF" HorizontalAlignment="Left" Width="145" Height="55" VerticalAlignment="Top" Click="btnGuardar_Click_1"/>
                        <Button x:Name="btnModificar" Content="✏ Modificar" Style="{StaticResource ModifyButton}" Margin="504,186,0,0" Background="#FFFFD3A5" HorizontalAlignment="Left" Width="145" Height="50" VerticalAlignment="Top" Click="btnModificar_Click_1"/>
                        <Button x:Name="btnEliminar" Content="🗑 Eliminar" Style="{StaticResource DeleteButton}" Margin="504,271,0,0" Background="#FFFFB3D1" HorizontalAlignment="Left" Width="145" Height="55" VerticalAlignment="Top" Click="btnEliminar_Click_1"/>
                    </Grid>
                </Border>

                <!-- Botones de Acción -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Tabla de Datos -->
                <Border Grid.Row="2" Background="White" CornerRadius="15" Padding="20" RenderTransformOrigin="0.5,0.5" Margin="0,19,0,0" Height="280" VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-0.634"/>
                            <RotateTransform/>
                            <TranslateTransform X="-2.389"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
                    </Border.Effect>

                    <DataGrid x:Name="dgvListarUsuario" Style="{StaticResource ModernDataGrid}" ColumnHeaderStyle="{StaticResource DataGridHeader}" Height="161" VerticalAlignment="Top" HorizontalAlignment="Center" Width="683" Margin="0,26,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SampleInt" Width="80"/>
                            <DataGridTextColumn Header="SampleStringA" Width="*"/>
                            <DataGridTextColumn Header="SampleStringB" Width="*"/>
                            <DataGridCheckBoxColumn Header="SampleBool" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </ScrollViewer>
        <TextBox x:Name="txtBuscar" Style="{StaticResource ModernTextBox}" Margin="0,82,0,0" HorizontalAlignment="Center" Width="666" Height="52" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombre" Style="{StaticResource ModernTextBox}" Height="51" Margin="150,139,0,0" HorizontalAlignment="Left" Width="354" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="913,70,0,0" VerticalAlignment="Top"/>
    </Grid>

</Window>
