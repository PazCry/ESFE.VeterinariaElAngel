<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="InterfazDeUsuarioUI.VentanaCita"
        mc:Ignorable="d"
        Title="VentanaCita" Height="707" Width="810">
    <Window.Resources>
        <!-- Estilos para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="{x:Type DatePicker}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox" Margin="{TemplateBinding Padding}" 
                                                   Background="Transparent" BorderThickness="0"/>
                                <Button x:Name="PART_Button" HorizontalAlignment="Right" Margin="0,0,8,0"
                                        Background="#FF9A9E" BorderThickness="0" Width="25" Height="25"
                                        Content="📅" FontSize="12" Foreground="White">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para Botones -->
        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#74B9FF"/>
        </Style>

        <Style x:Key="ResetButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#A29BFE"/>
        </Style>

        <Style x:Key="SaveButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#00B894"/>
        </Style>

        <Style x:Key="ModifyButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FDCB6E"/>
        </Style>

        <Style x:Key="AccessButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E17055"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF7675"/>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="ModernLabel" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F3F4"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style x:Key="DataGridHeader" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Border Height="70" VerticalAlignment="Top" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F8BBD9" Offset="0"/>
                    <GradientStop Color="#E4A5C7" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📅" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="GESTIÓN DE CITAS" FontSize="24" FontWeight="SemiBold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenido Principal -->
        <Grid Margin="20,80,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Formulario de Datos -->
            <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- TextBox oculto para ID de Cita -->
                    <TextBox x:Name="txtNumCita" Style="{StaticResource ModernTextBox}" Visibility="Collapsed"/>

                    <!-- Primera fila - Num Expediente -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <Label Content="Num Expediente:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtNumExpediente" Style="{StaticResource ModernTextBox}" Height="57" Foreground="Black" FontSize="14"/>
                    </StackPanel>

                    <!-- Primera fila - Fecha -->
                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <Label Content="Fecha de la Cita:" Style="{StaticResource ModernLabel}"/>
                        <DatePicker x:Name="dpFechaCita" Height="49" FontSize="14"/>
                    </StackPanel>

                    <!-- Segunda fila - Hora -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,0,0">
                        <Label Content="Hora:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtHora" Style="{StaticResource ModernTextBox}" 
                               ToolTip="Formato: HH:mm (ej: 14:30)" Height="53"/>
                    </StackPanel>

                    <!-- Segunda fila - Búsqueda -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,15,0,0">
                        <Label Content="Buscar Cita (Por Nombre):" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtBuscar" Height="57" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Tercera fila - Botones de navegación -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="3" 
                               HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnCliente" Content="👤 Cliente" 
                               Style="{StaticResource AccessButton}" 
                               Background="#FFA8E6CF" Click="btnCliente_Click" 
                               Margin="0,0,10,0"/>

                        <Button x:Name="btnExpediente" Content="📋 Expediente" 
                               Style="{StaticResource AccessButton}" 
                               Background="#FFFFB3D1" Click="btnExpediente_Click" 
                               Margin="0,0,10,0" Cursor="Hand"/>

                        <Button x:Name="btnMascota" Content="🐾 Mascota" 
                               Style="{StaticResource AccessButton}" 
                               Background="#FFA8C8EC" Click="btnMascota_Click" 
                               Margin="0,0,10,0"/>

                        <Button x:Name="btnVerCalendario" Content="📅 Ver Calendario" 
                               Style="{StaticResource AccessButton}" 
                               Background="#FFFFD3A5" Click="btnVerCalendario_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Botones de Acción -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button x:Name="btnGuardar" Content="💾 Guardar" 
                       Style="{StaticResource SaveButton}" 
                       Background="#FFA8E6CF" Click="btnGuardar_Click_1" 
                       Margin="0,0,10,0"/>

                <Button x:Name="btnModificar" Content="✏ Modificar" 
                       Style="{StaticResource ModifyButton}" 
                       Background="#FFFFD3A5" Click="btnMModificar_Click" 
                       Margin="0,0,10,0"/>

                <Button x:Name="btnEliminar" Content="🗑 Eliminar" 
                       Style="{StaticResource DeleteButton}" 
                       Background="#FFFFB3D1" Click="btnEliminar_Click" 
                       Margin="0,0,10,0"/>

                <Button x:Name="btnBuscar" Content="🔍 Buscar" 
                       Style="{StaticResource SearchButton}" 
                       Background="#FFA8C8EC" Click="btnBuscar_Click" 
                       Margin="0,0,10,0"/>

                <Button x:Name="btnReiniciar" Content="🔄 Reiniciar" 
                       Style="{StaticResource ResetButton}" Click="btnReiniciar_Click"/>
            </StackPanel>

            <!-- Tabla de Datos -->
            <Border Grid.Row="3" Background="White" CornerRadius="15" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
                </Border.Effect>

                <DataGrid x:Name="dgvCita" Style="{StaticResource ModernDataGrid}" 
                          ColumnHeaderStyle="{StaticResource DataGridHeader}" 
                          SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="60" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="ID Expediente" Width="120" Binding="{Binding IdExpediente}"/>
                        <DataGridTextColumn Header="Fecha Cita" Width="120" Binding="{Binding FechaCita, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                        <DataGridTextColumn Header="Hora" Width="100" Binding="{Binding Hora, StringFormat='{}{0:hh\\:mm}'}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>