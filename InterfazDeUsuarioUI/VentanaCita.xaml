<Window x:Class="InterfazDeUsuarioUI.VentanaCita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaCita" Height="707" Width="810">
    <Window.Resources>
        <!-- Estilos para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border CornerRadius="18" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox" Margin="{TemplateBinding Padding}" 
                                                   Background="Transparent" BorderThickness="0"/>
                                <Button x:Name="PART_Button" HorizontalAlignment="Right" Margin="0,0,8,0"
                                        Background="#FF9A9E" BorderThickness="0" Width="25" Height="25"
                                        Content="📅" FontSize="12" Foreground="White">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF9A9E"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para Botones -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#74B9FF"/>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#A29BFE"/>
        </Style>

        <Style x:Key="SaveButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#00B894"/>
        </Style>

        <Style x:Key="ModifyButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FDCB6E"/>
        </Style>

        <Style x:Key="AccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E17055"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF7675"/>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F3F4"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style x:Key="DataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Height="829" VerticalAlignment="Top">
        <!-- Header -->
        <Border Height="70" VerticalAlignment="Top" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F8BBD9" Offset="0"/>
                    <GradientStop Color="#E4A5C7" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📅" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="GESTIÓN DE CITAS" FontSize="24" FontWeight="SemiBold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenido Principal -->
        <ScrollViewer Margin="0,72,0,137" VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.5,0.756">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Formulario de Datos -->
                <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
                    </Border.Effect>

                    <Grid Margin="0,0,-15,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Primera fila -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBox x:Name="txtNumCita" Style="{StaticResource ModernTextBox}" Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2"/>

                        <StackPanel Grid.Row="0" Grid.Column="4"/>

                        <!-- Segunda fila -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,0,0"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,15,0,0"/>

                        <Button x:Name="btnExpediente" 
                Content="📋 Expediente" 
                Style="{StaticResource AccessButton}" 
                Margin="147,20,0,0" 
                Grid.Row="1" 
                Grid.Column="2" 
                HorizontalAlignment="Left" 
                Width="121" 
                Grid.ColumnSpan="2" Height="40" VerticalAlignment="Top" Background="#FFFFB3D1"/>

                        <Button x:Name="btnMascota" 
                Content="🐾 Mascota" 
                Style="{StaticResource AccessButton}" 
                Margin="5,20,0,0" 
                Grid.Row="1" 
                Grid.Column="4" 
                HorizontalAlignment="Left" 
                Width="120" Height="40" VerticalAlignment="Top" Background="#FFA8C8EC"/>

                        <Button x:Name="btnCliente" 
                Content="👤 Cliente" 
                Style="{StaticResource AccessButton}" 
                Margin="20,20,0,0" 
                Grid.ColumnSpan="2" 
                Grid.Row="1" 
                HorizontalAlignment="Left" 
                Width="115" 
                Grid.Column="1" Height="40" VerticalAlignment="Top" Background="#FFA8E6CF"/>

                        <Button x:Name="btnVerCalendario" 
                Content="📅 Ver Calendario" 
                Style="{StaticResource AccessButton}" 
                Margin="153,35,0,0" 
                Grid.Column="2" 
                Grid.Row="2" 
                Cursor="Hand" 
                VerticalAlignment="Top" 
                Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="121" Background="#FFFFD3A5"/>

                        <TextBox x:Name="txtBuscar" 
                 Style="{StaticResource ModernTextBox}" Grid.Column="2" Grid.ColumnSpan="3" Margin="167,0,0,0" HorizontalAlignment="Left" Width="238" Height="35" VerticalAlignment="Top"/>

                        <Label Content="Fecha de la Cita:" Margin="0,37,0,-20" Grid.Row="2"/>

                    </Grid>
                </Border>

                <!-- Botones de Acción -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="386,0,0,0" Height="201" VerticalAlignment="Center"/>


                <!-- Tabla de Datos -->
                <Border Grid.Row="2" Background="White" CornerRadius="15" Padding="20" Margin="0,158,0,190" Grid.RowSpan="2">
                    <DataGrid x:Name="dgvCita" Style="{StaticResource ModernDataGrid}" 
                              ColumnHeaderStyle="{StaticResource DataGridHeader}" 
                              Margin="0,-104,0,-73" 
                              SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SampleInt" Width="80" Binding="{Binding SampleInt}"/>
                            <DataGridTextColumn Header="SampleStringA" Width="*" Binding="{Binding SampleStringA}"/>
                            <DataGridTextColumn Header="SampleStringB" Width="*" Binding="{Binding SampleStringB}"/>
                            <DataGridCheckBoxColumn Header="SampleBool" Width="100" Binding="{Binding SampleBool}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                <Button x:Name="btnBuscar" Content="🔍 Buscar" Style="{StaticResource SearchButton}" Margin="477,23,0,0" HorizontalAlignment="Left" Width="110" Height="40" Grid.Row="3" Background="#FFA8C8EC" VerticalAlignment="Top"/>
                <Button x:Name="btnReiniciar" Content="🔄 Reiniciar" Style="{StaticResource ResetButton}" RenderTransformOrigin="1.695,4.119" Margin="621,23,0,0" Click="Button_Click" HorizontalAlignment="Left" Width="102" Height="40" Grid.Row="3" VerticalAlignment="Top"/>
                <Button x:Name="btnModificar" Content="✏ Modificar" Style="{StaticResource ModifyButton}" RenderTransformOrigin="1.074,0.558" Margin="178,23,0,325" HorizontalAlignment="Left" Width="103" Height="NaN" Grid.Row="3" Background="#FFFFD3A5"/>
                <Button x:Name="btnGuardar" Content="💾 Guardar" Style="{StaticResource SaveButton}" Margin="24,22,0,326" HorizontalAlignment="Left" Width="106" Height="NaN" Grid.Row="3" Background="#FFA8E6CF"/>
                <Label Content="Num Expediente:" Style="{StaticResource ModernLabel}" Margin="10,0,466,276"/>
                <TextBox x:Name="txtNumExpediente" Style="{StaticResource ModernTextBox}" Margin="24,38,0,0" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="257"/>
                <Label Content="Hora:" Style="{StaticResource ModernLabel}" Margin="24,86,452,189"/>
                <TextBox x:Name="txtHora" Style="{StaticResource ModernTextBox}" Text="Hora.." Margin="24,124,0,0" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="257"/>
                <Button x:Name="btnEliminar" Content="🗑 Eliminar" Style="{StaticResource DeleteButton}" Margin="327,24,0,325" Grid.Row="3" HorizontalAlignment="Left" Width="118" Height="NaN" Background="#FFFFB3D1"/>
                <Label Content="Buscar Cita (Por Nombre):" Style="{StaticResource ModernLabel}" Margin="335,24,267,252"/>
                <DatePicker x:Name="dpFechaCita" Style="{StaticResource ModernDatePicker}" HorizontalAlignment="Left" Width="300" Height="48" VerticalAlignment="Top" Margin="24,204,0,0"/>
            </Grid>
        </ScrollViewer>
    </Grid>



</Window>
