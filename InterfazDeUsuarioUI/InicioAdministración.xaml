<Window x:Class="InterfazDeUsuarioUI.InicioAdministración"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="InicioAdministración" Height="913" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Gradiente de fondo rosado pastel -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE4E1" Offset="0"/>
            <GradientStop Color="#FFC0CB" Offset="0.5"/>
            <GradientStop Color="#FFB6C1" Offset="1"/>
        </LinearGradientBrush>

        <!-- Gradiente del sidebar -->
        <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#FFFAF0E6" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo para botones del sidebar -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                       Background="{TemplateBinding Background}"
                       CornerRadius="8"
                       Padding="{TemplateBinding Padding}"
                       Margin="{TemplateBinding Margin}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icono -->
                                <TextBlock x:Name="Icon"
                                 Grid.Column="0"
                                 Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                 FontSize="16"
                                 Margin="0,0,12,0"
                                 VerticalAlignment="Center"
                                 Foreground="#FFDA70D6"/>

                                <!-- Contenido del botón -->
                                <ContentPresenter Grid.Column="1"
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#20DA70D6"/>
                                <Setter Property="Foreground" Value="#FF444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#30DA70D6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el botón activo -->
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#FFDA70D6"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBA55D3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón de cerrar -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFDA70D6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20DA70D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones de control de ventana -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FFDA70D6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20DA70D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" 
   Background="White"
   BorderBrush="#FFDDA0DD" 
   BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#FFDDDDDD" 
                   Direction="270" 
                   ShadowDepth="8" 
                   Opacity="0.4" 
                   BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0"
           Background="{StaticResource SidebarGradient}"
           CornerRadius="10,0,0,10"
           BorderBrush="#FFDDA0DD"
           BorderThickness="0,0,1,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header del Sidebar -->
                    <Border Grid.Row="0" 
                   Background="#FFDA70D6" 
                   CornerRadius="10,0,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                                <TextBlock Text="🏥" 
                                 FontSize="20" 
                                 Margin="0,0,8,0" 
                                 VerticalAlignment="Center"/>
                                <TextBlock Text="EL ÁNGEL" 
                                 FontSize="16" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Botones del Menu -->
                    <ScrollViewer Grid.Row="1" 
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Disabled"
                        Margin="0,15,0,0">
                        <StackPanel>
                            <!-- Sección Usuarios y Roles -->
                            <TextBlock Text="GESTIÓN DE USUARIOS" 
                             FontSize="10" 
                             FontWeight="Bold" 
                             Foreground="#FFBA55D3" 
                             Margin="20,10,20,5"/>

                            <Button x:Name="btnInicio"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="👥"
                                 Content="Inicio"
                                 Click="Dashboard_Click"/>

                            <Button x:Name="btnUsuario"
                                 Style="{StaticResource ActiveSidebarButton}"
                                 Tag="👤"
                                 Content="Usuario" 
                                 Click="Usuarios_Click"/>

                            <Button x:Name="btnRoles"
                            Style="{StaticResource SidebarButton}"
                             Tag="🏷️"
                               Content="Roles"
                            Click="Roles_Click"/>

                            <!-- Separador visual -->
                            <Rectangle Height="1" 
                             Fill="#FFDDA0DD" 
                             Margin="20,10"/>

                            <!-- Sección Mascotas -->
                            <TextBlock Text="GESTIÓN DE MASCOTAS" 
                             FontSize="10" 
                             FontWeight="Bold" 
                             Foreground="#FFBA55D3" 
                             Margin="20,10,20,5"/>

                            <Button x:Name="btnMascota"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="🐕"
                                 Content="Mascota"
                                 Click="Mascotas_Click"/>

                            <Button x:Name="btnGenero"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="⚧"
                                 Content="Género"
                                 Click="Generos_Click"/>

                            <Button x:Name="btnRaza"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="🐾"
                                 Content="Raza"
                                 Click="Razas_Click"/>

                            <Button x:Name="btnEspecie"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="🦮"
                                 Content="Especie"
                                 Click="Especies_Click"/>

                            <!-- Separador visual -->
                            <Rectangle Height="1" 
                             Fill="#FFDDA0DD" 
                             Margin="20,10"/>

                            <!-- Sección Clínica -->
                            <TextBlock Text="GESTIÓN CLÍNICA" 
                             FontSize="10" 
                             FontWeight="Bold" 
                             Foreground="#FFBA55D3" 
                             Margin="20,10,20,5"/>

                            <Button x:Name="btnCita"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="📅"
                                 Content="Cita"
                                 Click="Citas_Click"/>

                            <Button x:Name="btnExpediente"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="📋"
                                 Content="Expediente"
                                 Click="Historial_Click"/>


                            <!-- Separador visual -->
                            <Rectangle Height="1" 
                             Fill="#FFDDA0DD" 
                             Margin="20,10"/>

                            <!-- Sección Clientes -->
                            <TextBlock Text="GESTIÓN DE CLIENTES" 
                             FontSize="10" 
                             FontWeight="Bold" 
                             Foreground="#FFBA55D3" 
                             Margin="20,10,20,5"/>

                            <Button x:Name="btnCliente"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="👥"
                                 Content="Cliente"
                                 Click="Clientes_Click"/>

                            <Button x:Name="btnCerrarSesion"
                                 Style="{StaticResource SidebarButton}"
                                 Tag="🚪"
                                 Content="Cerrar Sesion"
                                 Click="CerrarSesion_Click"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer del Sidebar -->
                    <Border Grid.Row="2" 
                   Background="#FFF8F8FF" 
                   CornerRadius="0,0,0,10"
                   Padding="15,10">
                        <StackPanel>
                            <Rectangle Height="1" 
                             Fill="#FFDDA0DD" 
                             Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center">
                                <TextBlock Text="👨‍⚕️" 
                                 FontSize="14" 
                                 Margin="0,0,5,0"/>
                                <TextBlock Text="Dr. Sistema" 
                                 FontSize="12" 
                                 FontWeight="SemiBold" 
                                 Foreground="#FFDA70D6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ÁREA PRINCIPAL -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barra de título personalizada -->
                <Border Grid.Row="0" 
               Background="{StaticResource BackgroundGradient}" 
               CornerRadius="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Título de la ventana DINÁMICO -->
                        <StackPanel Grid.Column="0" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="20,0">
                            <TextBlock x:Name="PageTitle" 
                             Text="🏥 Panel Principal - Sistema El Ángel" 
                             FontSize="14" 
                             FontWeight="SemiBold" 
                             Foreground="#FFDA70D6"/>
                        </StackPanel>

                        <!-- Botones de notificación y configuración -->
                        <StackPanel Grid.Column="1" 
                                 Orientation="Horizontal" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,15,0">
                            <TextBlock Text="🔔" 
                                   FontSize="16" 
                                   Foreground="#FFDA70D6"
                                   Margin="0,0,15,0"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"/>
                            <TextBlock Text="⚙️" 
                                   FontSize="14" 
                                   Foreground="#FFBA55D3"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Área de contenido principal -->
                <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="0,0,10,0"
               Padding="30" Margin="0,0,0,10">

                    <!-- 🔑 CLAVE: Grid con nombre MainContent para contenido dinámico -->
                    <Grid x:Name="MainContent">
                        <!-- Panel de bienvenida elegante -->
                        <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Opacity="0.7">
                            <TextBlock Text="🌸 Sistema Veterinario El Ángel" 
                                   FontSize="28" 
                                   FontWeight="Light"
                                   Foreground="#FFDA70D6"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>
                            <TextBlock Text="Selecciona una opción del menú lateral para comenzar" 
                                   FontSize="16" 
                                   Foreground="#FFBA55D3"
                                   HorizontalAlignment="Center"
                                   Opacity="0.9"/>
                            <TextBlock Text="¡Cuidamos a tus mascotas con amor! 💕" 
                                   FontSize="14" 
                                   Foreground="#FFDA70D6"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   FontStyle="Italic"
                                   Opacity="0.8"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
