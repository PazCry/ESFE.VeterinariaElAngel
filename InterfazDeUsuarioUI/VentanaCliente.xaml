<Window x:Class="InterfazDeUsuarioUI.VentanaCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaCliente" Height="450" Width="800">
    <Window.Resources>
        <!-- Estilos exactos como la imagen de razas -->
        <Style x:Key="GuardarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#90EE90"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BuscarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Background" Value="#87CEEB"/>
        </Style>

        <Style x:Key="ModificarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Background" Value="#FFB347"/>
        </Style>

        <Style x:Key="EliminarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Background" Value="#FFB6C1"/>
        </Style>

        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox rosa -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <!-- Estilo para títulos de sección -->
        <Style x:Key="SectionTitleStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            Margin="15,0,15,15"
            BorderBrush="#ddd"
            BorderThickness="1">
        <Grid Margin="20,9,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER ROSA -->
            <Border Grid.Row="0" 
                    Background="#FFB6C1" 
                    CornerRadius="10" 
                    Padding="15"
                    Margin="0,1,0,0" Height="58" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Border Background="White" 
                            Width="35" 
                            Height="35" 
                            CornerRadius="8" 
                            Margin="0,0,12,0">
                        <TextBlock Text="👤" 
                                 Foreground="#FFB6C1" 
                                 FontSize="16" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="GESTIÓN DE CLIENTES" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="White" 
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- SECCIÓN FORMULARIO Y BOTONES -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- FORMULARIO DE DATOS -->
                <StackPanel Grid.Column="0" Margin="0,-16,20,16">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Primera fila -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,14,37" Grid.ColumnSpan="2"/>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10"/>

                        <!-- Segunda fila -->
                        <StackPanel Grid.Row="1" Grid.Column="0"/>

                        <StackPanel Grid.Row="1" Grid.Column="2"/>
                        <Label Content="Teléfono:" Style="{StaticResource FormLabelStyle}" Grid.ColumnSpan="2" Margin="7,-27,8,0" Height="24" VerticalAlignment="Top"/>
                        <Label Content="Apellido:" Style="{StaticResource FormLabelStyle}" Grid.Column="2" Margin="10,-26,-13,0" Height="26" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtTelefono" Style="{StaticResource InputTextBoxStyle}" Grid.ColumnSpan="2" Margin="-2,4,14,14"/>
                    </Grid>
                </StackPanel>

                <!-- BOTONES ACCIÓN -->
                <StackPanel Grid.Column="1"/>
            </Grid>

            <!-- BARRA DE BÚSQUEDA -->
            <Border 
                    Background="#E6E6FA" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="10,31,-10,0" Grid.Row="1" Height="53" VerticalAlignment="Top" Grid.RowSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Label Content="BARRA DE BÚSQUEDA" 
                           Style="{StaticResource SectionTitleStyle}"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                    <TextBox Name="txtBuscarCliente" 
                            Style="{StaticResource InputTextBoxStyle}"
                            Width="200"
                            Background="White"/>
                    <Button Content="🔍" 
                           Style="{StaticResource SearchButtonStyle}"
                           Name="btnBuscarTabla"
                           Margin="10,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- TÍTULO REGISTROS -->
            <Border Grid.Row="2"
                    Background="#9370DB" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="6,13,-6,23">
                <TextBlock Text="REGISTROS DE CLIENTES" 
                         Foreground="White" 
                         FontWeight="Bold" 
                         FontSize="12" 
                         HorizontalAlignment="Center"/>
            </Border>

            <!-- DATAGRID -->
            <DataGrid Grid.Row="4" 
                     Name="dgClientes"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     GridLinesVisibility="All"
                     HeadersVisibility="Column"
                     Background="White"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     FontSize="10">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#f8f9fa"/>
                        <Setter Property="Foreground" Value="#495057"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="10"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>

                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f8f9fa"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#e3f2fd"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="BorderBrush" Value="#ddd"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="10"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding Id}" 
                                       Width="50"/>
                    <DataGridTextColumn Header="Num Cliente" 
                                       Binding="{Binding NumCliente}" 
                                       Width="100"/>
                    <DataGridTextColumn Header="Nombre" 
                                       Binding="{Binding Nombre}" 
                                       Width="120"/>
                    <DataGridTextColumn Header="Apellido" 
                                       Binding="{Binding Apellido}" 
                                       Width="120"/>
                    <DataGridTextColumn Header="Teléfono" 
                                       Binding="{Binding Telefono}" 
                                       Width="100"/>
                    <DataGridTextColumn Header="Fecha Creación" 
                                       Binding="{Binding FechaCreacion}" 
                                       Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="FORMULARIO DE DATOS" 
                           Style="{StaticResource SectionTitleStyle}" Margin="0,0,270,98" Height="37" VerticalAlignment="Bottom"/>
            <Label Content="BOTONES ACCIÓN" 
                           Style="{StaticResource SectionTitleStyle}" Margin="478,76,0,29"/>
            <Grid Margin="478,108,0,85" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0"
                                Content="✓ Guardar" 
                                Style="{StaticResource GuardarButtonStyle}" 
                                x:Name="btnGuardar"/>
                <Button Grid.Row="0" Grid.Column="1"
                                Content="🔍 Buscar" 
                                Style="{StaticResource BuscarButtonStyle}" 
                                x:Name="btnBuscar"/>
                <Button Grid.Row="1" Grid.Column="0"
                                Content="✏️ Modificar" 
                                Style="{StaticResource ModificarButtonStyle}" 
                                x:Name="btnModificar"/>
                <Button Grid.Row="1" Grid.Column="1"
                                Content="🗑️ Eliminar" 
                                Style="{StaticResource EliminarButtonStyle}" 
                                x:Name="btnEliminar"/>
            </Grid>
            <Label Content="Num Cliente:" Style="{StaticResource FormLabelStyle}" Margin="7,87,499,0" Height="34" VerticalAlignment="Top"/>
            <Label Content="Nombre:" Style="{StaticResource FormLabelStyle}" Margin="236,0,270,86" Height="30" VerticalAlignment="Bottom"/>
            <TextBox x:Name="txtNombre" Style="{StaticResource InputTextBoxStyle}" Margin="236,194,270,0" Height="36" VerticalAlignment="Top" Grid.RowSpan="2"/>
            <TextBox x:Name="txtApellido" Style="{StaticResource InputTextBoxStyle}" Margin="236,118,270,42"/>
            <TextBox x:Name="txtNumCliente" Style="{StaticResource InputTextBoxStyle}" Margin="6,118,499,42"/>
        </Grid>
    </Border>
</Window>
