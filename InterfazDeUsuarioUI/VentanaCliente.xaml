<Window x:Class="InterfazDeUsuarioUI.VentanaCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaCliente" Height="503" Width="800">
    <Window.Resources>
        <!-- Estilos exactos como la imagen de razas -->
        <Style x:Key="GuardarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#90EE90"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BuscarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Background" Value="#87CEEB"/>
        </Style>

        <Style x:Key="ModificarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Background" Value="#FFB347"/>
        </Style>

        <Style x:Key="EliminarButtonStyle" TargetType="Button" BasedOn="{StaticResource GuardarButtonStyle}">
            <Setter Property="Background" Value="#FFB6C1"/>
        </Style>

        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox rosa -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#FFB6C1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <!-- Estilo para títulos de sección -->
        <Style x:Key="SectionTitleStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            Margin="15,0,15,15"
            BorderBrush="#ddd"
            BorderThickness="1">
        <Grid Margin="20,9,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="283"/>
                <RowDefinition Height="105.04"/>
            </Grid.RowDefinitions>

            <!-- HEADER ROSA -->
            <Border Grid.Row="0" 
                    Background="#F8BBD9" 
                    CornerRadius="10" 
                    Padding="15"
                    Margin="0,1,0,0" Height="58" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Border Background="White" 
                            Width="35" 
                            Height="35" 
                            CornerRadius="8" 
                            Margin="0,0,12,0">
                        <TextBlock Text="👤" 
                                 Foreground="#FFB6C1" 
                                 FontSize="16" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="GESTIÓN DE CLIENTES" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="White" 
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- SECCIÓN FORMULARIO Y BOTONES -->
            <Grid Margin="0,188,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- FORMULARIO DE DATOS -->
                <StackPanel Grid.Column="0" Margin="0,-16,20,16">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="181*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="222*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Primera fila -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,14,37" Grid.ColumnSpan="3"/>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="14,0,0,10" Grid.ColumnSpan="2"/>

                        <!-- Segunda fila -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,14,0"/>

                        <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="14,0,0,0"/>
                        <Label Content="Teléfono:" Style="{StaticResource FormLabelStyle}" Grid.ColumnSpan="2" Margin="7,-9,7,0" Height="24" VerticalAlignment="Top"/>
                        <Label Content="Apellido:" Style="{StaticResource FormLabelStyle}" Grid.Column="3" Margin="18,-90,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216"/>
                        <TextBox x:Name="txtTelefono" Style="{StaticResource InputTextBoxStyle}" Grid.ColumnSpan="3" Margin="10,23,0,0" Height="44" VerticalAlignment="Top" HorizontalAlignment="Left" Width="224" Background="#FFFFDBED" Grid.RowSpan="2"/>
                    </Grid>
                </StackPanel>

                <!-- BOTONES ACCIÓN -->
                <StackPanel Grid.Column="1"/>
            </Grid>

            <!-- BARRA DE BÚSQUEDA -->
            <Border 
                    Background="#E6E6FA" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="10,250,-10,0" Height="52" VerticalAlignment="Top" Grid.RowSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Label Content="BARRA DE BÚSQUEDA" 
                           Style="{StaticResource SectionTitleStyle}"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                    <TextBox x:Name="txtBuscar" 
                            Style="{StaticResource InputTextBoxStyle}"
                            Width="527"
                            Background="White" Height="18"/>
                </StackPanel>
            </Border>

            <!-- TÍTULO REGISTROS -->

            <!-- DATAGRID -->
            <Label Content="FORMULARIO DE DATOS" 
                           Style="{StaticResource SectionTitleStyle}" Margin="0,0,270,181" Height="36" VerticalAlignment="Bottom"/>
            <Label Content="BOTONES ACCIÓN" 
                           Style="{StaticResource SectionTitleStyle}" Margin="478,76,0,123"/>
            <Grid Margin="478,108,0,85">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0"
                                Content="✓ Guardar" 
                                Style="{StaticResource GuardarButtonStyle}" 
                                x:Name="btnGuardar" Background="#FFA8E6CF" HorizontalAlignment="Center" Margin="0,5,0,0" Width="100" Height="35" VerticalAlignment="Top" Click="btnGuardar_Click_1"/>
                <Button Grid.Row="0" Grid.Column="1"
                                Content="🔍 Buscar" 
                                Style="{StaticResource BuscarButtonStyle}" 
                                x:Name="btnBuscar" HorizontalAlignment="Center" Margin="0,5,0,0" Width="100" Height="35" VerticalAlignment="Top" Click="btnBuscar_Click_1"/>
                <Button Grid.Row="1"
                                Content="✏️ Modificar" 
                                Style="{StaticResource ModificarButtonStyle}" 
                                x:Name="btnModificar" Background="#FFFFD3A5" HorizontalAlignment="Center" Margin="0,5,0,0" Width="100" Height="35" VerticalAlignment="Top" Click="btnModificar_Click_1"/>
                <Button Grid.Row="1" Grid.Column="1"
                                Content="🗑️ Eliminar" 
                                Style="{StaticResource EliminarButtonStyle}" 
                                x:Name="btnEliminar" HorizontalAlignment="Center" Margin="0,5,0,0" Width="100" Height="35" VerticalAlignment="Top" Click="btnEliminar_Click_1"/>
            </Grid>
            <Label Content="Nombre:" Style="{StaticResource FormLabelStyle}" Margin="7,0,499,163" Height="30" VerticalAlignment="Bottom"/>
            <TextBox x:Name="txtNombre" Style="{StaticResource InputTextBoxStyle}" Margin="251,0,0,0" Height="48" VerticalAlignment="Center" HorizontalAlignment="Left" Width="222" Background="#FFFFDBED"/>
            <TextBox x:Name="txtApellido" Style="{StaticResource InputTextBoxStyle}" Margin="6,118,0,0" Height="41" VerticalAlignment="Top" HorizontalAlignment="Left" Width="222" Background="#FFFFDBED"/>
            <TextBox x:Name="txtNumCliente" Style="{StaticResource InputTextBoxStyle}" Margin="6,118,499,130" Visibility="Collapsed"/>
            <Button Content="🔍" 
                           Style="{StaticResource SearchButtonStyle}"
                           x:Name="btnBuscarTabla" Margin="703,261,0,0" HorizontalAlignment="Left" Width="25" Height="25" VerticalAlignment="Top" Grid.RowSpan="2"/>
            <DataGrid x:Name="dgClientes" HorizontalAlignment="Left" Height="124" Margin="25,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="693" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dgClientes_SelectionChanged"/>
        </Grid>
    </Border>
</Window>
