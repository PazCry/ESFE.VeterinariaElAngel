<Window x:Class="InterfazDeUsuarioUI.VentanaRol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazDeUsuarioUI"
        mc:Ignorable="d"
        Title="VentanaRol" Height="627" Width="800">
    <Window.Resources>
        <!-- Colores Rosados Pastel -->
        <SolidColorBrush x:Key="RosaPastelPrincipal" Color="#F8BBD9"/>
        <SolidColorBrush x:Key="RosaPastelSecundario" Color="#E4A5C7"/>
        <SolidColorBrush x:Key="RosaPastelClaro" Color="#FDE2F3"/>
        <SolidColorBrush x:Key="RosaPastelMedio" Color="#F3E8FF"/>
        <SolidColorBrush x:Key="AzulPastel" Color="#BFDBFE"/>
        <SolidColorBrush x:Key="VerdePastel" Color="#BBF7D0"/>
        <SolidColorBrush x:Key="NaranjaPastel" Color="#FED7AA"/>

        <!-- Estilo para botones -->
        <Style x:Key="BotonPastel" TargetType="Button">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox -->
        <Style x:Key="TextBoxPastel" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Labels -->
        <Style x:Key="LabelPastel" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <!-- Contenedor principal con bordes punteados -->
    <Border BorderBrush="#4F46E5" BorderThickness="2" 
            Margin="15" CornerRadius="10">
        <Grid Background="White" Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="263.96"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con gradiente rosado -->
            <Border Grid.Row="0" CornerRadius="8,8,0,0" Margin="15,15,15,193">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#F8BBD9" Offset="0"/>
                        <GradientStop Color="#E4A5C7" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icono -->
                    <Border Grid.Column="0" Background="White" 
                           Width="32" Height="32" CornerRadius="6" 
                           Margin="20,12">
                        <TextBlock Text="🐕" FontSize="18" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>

                    <!-- Título -->
                    <TextBlock Grid.Column="1" Text="GESTIÓN DE ROL" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              Margin="10,0"/>
                </Grid>
            </Border>

            <!-- Sección Formulario y Botones -->
            <Grid Margin="15,91,15,70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Formulario de Datos -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="FORMULARIO DE DATOS" 
                              FontWeight="Bold" FontSize="12" 
                              Foreground="{StaticResource RosaPastelSecundario}" 
                              Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ID -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBox x:Name="txtNumeroRol" Style="{StaticResource TextBoxPastel}" 
                                    Background="{StaticResource RosaPastelClaro}" Width="148" RenderTransformOrigin="-0.468,0.523" Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Tipo de Raza -->
                        <StackPanel Grid.Column="2" Grid.Row="0"/>
                    </Grid>
                </StackPanel>

                <!-- Botones de Acción -->
                <StackPanel Grid.Column="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="71.92"/>
                        </Grid.RowDefinitions>

                        <!-- Primera fila de botones -->
                        <Button x:Name="btnGuardar" Grid.Column="0" Grid.Row="0" 
                               Content="💾 Guardar" 
                               Style="{StaticResource BotonPastel}"
                               Background="{StaticResource VerdePastel}"
                               Margin="-5,23,0,0" HorizontalAlignment="Left" Width="178" Height="32" VerticalAlignment="Top"/>

                        <Button x:Name="btnBuscar" 
                               Content="🔍 Buscar" 
                               Style="{StaticResource BotonPastel}"
                               Background="{StaticResource AzulPastel}"
                               Margin="186,0,0,0" Height="32" VerticalAlignment="Center" HorizontalAlignment="Left" Width="177"/>

                        <!-- Segunda fila de botones -->

                        <Button x:Name="btnEliminar" 
                               Content="🗑️ Eliminar" 
                               Style="{StaticResource BotonPastel}"
                               Background="{StaticResource RosaPastelPrincipal}"
                               Margin="186,69,0,-29" HorizontalAlignment="Left" Width="177"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Barra de Búsqueda -->
            <Grid Margin="15,224,15,303" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="BARRA DE BÚSQUEDA" 
                          FontWeight="Bold" FontSize="12" 
                          Foreground="{StaticResource RosaPastelSecundario}" 
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>

                <TextBox x:Name="txtBuscar" Style="{StaticResource TextBoxPastel}"
                        Background="{StaticResource RosaPastelMedio}"
                        Height="35" Grid.ColumnSpan="3" Margin="146,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="531"/>

                <Button x:Name="btnReiniciar" Grid.Column="2" 
                       Background="{StaticResource RosaPastelPrincipal}"
                       Style="{StaticResource BotonPastel}" Height="40"
                       Content="🔍"
                       Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="46"/>
            </Grid>
            <!-- DataGrid -->
            <Border Grid.Row="1" Margin="20,50,0,0" 
        CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Height="243" VerticalAlignment="Top" HorizontalAlignment="Left" Width="726">

                <!-- Header del DataGrid -->
                <DataGrid x:Name="dgvListarRol" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="-1,9,0,0" Height="119" VerticalAlignment="Top" HorizontalAlignment="Left" Width="693"/>
            </Border>
            <Label Content="Tipo de Rol:" Style="{StaticResource LabelPastel}" Margin="15,119,0,0" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="161"/>
            <TextBox x:Name="txtNombreRol" Style="{StaticResource TextBoxPastel}"
                                    Background="{StaticResource RosaPastelClaro}" Margin="15,145,0,0" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="348"/>
            <Button x:Name="btnModificar" 
                               Content="✏️ Modificar" 
                               Style="{StaticResource BotonPastel}"
                               Background="{StaticResource NaranjaPastel}" Margin="378,162,200,70"/>


        </Grid>
    </Border>


</Window>
